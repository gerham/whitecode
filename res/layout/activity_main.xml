    <Button
        android:id="@+id/bt_data_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_data_start" />

    <Button
        android:id="@+id/bt_data_stop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_data_stop" />

</LinearLayout>